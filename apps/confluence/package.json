{
  "name": "@elba-security/confluence",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "database:down": "docker-compose -p confluence down --volumes",
    "database:generate": "drizzle-kit generate:pg --config ../../drizzle.config.ts",
    "database:migrate": "drizzle-kit push:pg --config ../../drizzle.config.ts",
    "database:up": "docker-compose -p confluence --profile edge --env-file=.env.local up -d",
    "dev:inngest": "inngest-cli dev -u http://localhost:4000/api/inngest",
    "dev": "next dev -p 4000",
    "lint": "next lint",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@elba-security/config": "workspace:*",
    "@elba-security/inngest": "workspace:*",
    "@elba-security/logger": "workspace:*",
    "@elba-security/nango": "workspace:*",
    "@elba-security/nextjs": "workspace:*",
    "@elba-security/schemas": "workspace:*",
    "@elba-security/sdk": "workspace:*",
    "@neondatabase/serverless": "catalog:",
    "drizzle-orm": "catalog:",
    "inngest": "catalog:",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@edge-runtime/vm": "catalog:",
    "@elba-security/eslint-config-custom": "workspace:*",
    "@elba-security/test-utils": "workspace:*",
    "@elba-security/tsconfig": "workspace:*",
    "@next/eslint-plugin-next": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "msw": "catalog:",
    "postgres": "catalog:",
    "testcontainers": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
