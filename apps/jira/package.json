{
  "name": "@elba-security/jira",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "database:down": "docker-compose -p jira down",
    "database:generate": "drizzle-kit generate:pg --schema=./src/database/schema.ts",
    "database:migrate": "node ./scripts/migrate.js .env.local",
    "database:up": "docker-compose -p jira --env-file=.env.local up -d",
    "dev:inngest": "inngest-cli dev --verbose -u http://localhost:4000/api/inngest",
    "dev": "next dev -p 4000",
    "lint": "next lint",
    "start": "next start",
    "test:database:down": "docker-compose -p jira-test down",
    "test:database:migrate": "node ./scripts/migrate.js .env.test",
    "test:database:up": "docker-compose -p jira-test --env-file=.env.test up -d",
    "test:watch": "sh ./scripts/run-test.sh -w",
    "test": "sh ./scripts/run-test.sh"
  },
  "dependencies": {
    "@elba-security/config": "workspace:*",
    "@elba-security/inngest": "workspace:*",
    "@elba-security/logger": "workspace:*",
    "@elba-security/nextjs": "workspace:*",
    "@elba-security/sdk": "workspace:*",
    "@sentry/nextjs": "^7.88.0",
    "@vercel/postgres": "^0.5.1",
    "date-fns": "^3.3.1",
    "drizzle-orm": "^0.29.1",
    "inngest": "^3.8.0",
    "js-cookie": "^3.0.5",
    "next": "14.0.1",
    "postgres": "^3.4.3",
    "react": "^18",
    "react-dom": "^18",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^3.1.7",
    "@elba-security/eslint-config-custom": "workspace:*",
    "@elba-security/test-utils": "workspace:*",
    "@elba-security/tsconfig": "workspace:*",
    "@next/eslint-plugin-next": "^14.0.2",
    "@types/js-cookie": "^3.0.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8",
    "inngest-cli": "^0.23.1",
    "msw": "^2.0.1",
    "postgres": "^3.4.3",
    "typescript": "^5",
    "vitest": "1.1.1"
  }
}
